@model DupacoGarageSale.Data.Domain.GarageSaleUser

@{
    ViewBag.Title = "Sign up for the Dupaco Garage Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<div id="bg">
  <img src="~/Content/images/garage-sale-3.jpg" alt="">
</div>*@

<div id="page-wrap" class="jumbotron" style="min-height:600px;">
    <a href="http://www.dupaco.com" style="margin-top:-40px;"><img alt="dupaco!" src="~/Content/images/dupaco.png" /></a>
    <img src="~/Content/images/garagesale.gif" />
    <h2>@ViewBag.Title</h2>

    <div class="marketing" style="width:50%;">
        @using (Html.BeginForm("RegisterUser", "Accounts", FormMethod.Post, new { @role="form"}))
        {
            <p class="lead">
                Are you a buyer or a seller?
            </p>
            
            <div class="form-group">
                <label class="radio-inline">
                    @Html.RadioButtonFor(m => m.UserTypeId, 3, new { @checked = "checked" }) I am a buyer
                </label>

                <label class="radio-inline">
                    @Html.RadioButtonFor(m => m.UserTypeId, 2) I am a seller
                </label>
            </div>
            
            <div class="form-group">
                <label for="txtFirstName">First Name *</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id="txtFirstName" })
                <span class="text-error">@Html.ValidationMessageFor(m => m.FirstName)</span>
            </div>

            <div class="form-group">
                <label for="txtLastName">Last Name *</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id="txtLastName" })
                <span class="text-error">@Html.ValidationMessageFor(m => m.LastName)</span>
            </div>
            
            <div class="form-group">
                <label for="txtUserName">User Name *</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id="txtUserName" })
                <span class="text-error">@Html.ValidationMessageFor(m => m.UserName)</span>
            </div>

            <div class="form-group">
                <label for="txtEmail">Email *</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id="txtEmail" })
                <span class="text-error">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>
            
            <div class="form-group">
                <label for="txtPhone">Phone *</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", id="txtPhone", @placeholder="555-323-1234" })
                <span class="text-error">@Html.ValidationMessageFor(m => m.Phone)</span>
            </div>
            
            <div class="form-group">
                <label for="txtPassword">Password *</label>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", id="txtPassword", @type="password" })
                <span class="text-error">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
            
            <div class="form-group">
                <label for="txtConfirmPassword">Confirm Password *</label>
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", id="txtConfirmPassword", @type="password" })
                <span class="text-error">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
            </div>
            
            <div class="form-group">
                <input type="submit" class="btn btn-primary down_30" value="Register" />
            </div>
        }
    </div>
</div>
