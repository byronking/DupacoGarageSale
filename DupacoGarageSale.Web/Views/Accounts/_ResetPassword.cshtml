@model DupacoGarageSale.Data.Domain.PasswordResetInfo

@using (Html.BeginForm("ResetPassword", "Accounts", FormMethod.Post, new { @class="form-horizontal", @role="form" }))
{
<div class="modal fade reset-password-modal" tabindex="-1" role="dialog" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Reset your password</h4>
            </div>
            <div class="modal-body" style="margin-left:70px;">    
                <div class="form-group">
                    Enter the user name and email address associated with your account.
                </div>
                <div class="form-group" style="width:60%;">
                    <label for="txtTitle">User name *</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class="form-control", @id="txtPasswordResetUserName", placeholder="Enter your user name" })
                    <span id="validateUserName" class="red invisible">Please enter your user name.</span>
                </div><br />
                <div class="form-group" style="width:60%;">
                    <label>Email address *</label>
                    @Html.TextBoxFor(m => m.Email, new { @class="form-control", @id="txtPasswordResetEmail", placeholder="Enter your email address" })
                    <span id="validateEmail" class="red invisible">Please enter your email address.</span>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-info" value="Request password reset" id="btnResetPassword" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>                
            </div>
        </div>
    </div>
</div>
}