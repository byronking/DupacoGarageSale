@model DupacoGarageSale.Web.Models.GarageSaleViewModel

@{
    ViewBag.Title = "Add your garage sales";
    Layout = "~/Views/Shared/_GarageSaleLayout.cshtml";
}

<div id="page-wrap" class="jumbotron" style="min-height:500px;">
