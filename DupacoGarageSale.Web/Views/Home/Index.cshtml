@model DupacoGarageSale.Web.Models.GarageSaleViewModel

@{
    ViewBag.Title = "Welcome to the Dupaco Garage Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .nav-tabs li a {font-size:14px;padding: 13px 4px;color:#000000;}
</style>

<div id="page-wrap" class="jumbotron" style="min-height:580px;">
    <div>
        <a href="~/Home/" style="margin-top:-40px;"><img alt="dupaco!" src="~/Content/images/dupaco.png" /></a>
        <img src="~/Content/images/garagesale.gif" />
    </div><br />

    <h2 class="down-20">Dupaco Community-Wide Garage Sales!</h2>
    <p class="lead">
        Why garage sales? As a credit union, Dupaco is about people, thrift, and the community. That's also what the Community-Wide Garage Sale is about, and why it's a perfect 
        fit for us.
    </p>
    <div class="container">
        <div class="row down-20">            
            <div class="row">                
                <div class="col-sm-3 col-md-2 sidebar">
                    @{
                        var categories = Model.ItemCategories.Select(x => new { x.ItemCategoryName, x.ItemCategoryId }).Distinct().ToList();
                        var subcategories = Model.ItemCategories.Select(x => x.ItemSubcategoryName).Distinct().ToList();
                    }

                    <div class="list-group">
                        @foreach (var category in categories)
                        {
                            <a href="#" id="linkCategory@(category.ItemCategoryId)" class="list-group-item">@category.ItemCategoryName.ToLower()</a>
                            <input type="hidden" id="hdnCategory@(category.ItemCategoryId)" value="@category.ItemCategoryId" />
                        }
                    </div>
                </div>
                <div class="col-sm-9 col-md-10">
                    <div>
                        @Html.Partial("~/Views/GarageSale/_SearchBar.cshtml")
                    </div>
                    <div id="categoryContent" class="invisible col-sm-9 col-md-10"></div>

                    <div class="row">
                        <div id="featuredContent" class="col-sm-9 col-md-10">
                            @{ if (Model.GarageSaleSpecialItems.Count > 0)
                               {
                                   <p class="lead">Featured hot picks</p>
                                    foreach (var item in Model.GarageSaleSpecialItems)
                                    {
                                        <div class="col-md-5">
                                            <div class="thumbnail" style="min-height:490px;">
                                                <img alt="100%x200" data-src="holder.js/100%x200" style="height: 200px; width: 100%; display: block;" src="~/Content/images/garage_sale_pictures/@item.PictureLink">
                                                <div class="caption">
                                                    <h3>@item.Title</h3>
                                                    @item.Description<br /><br />
                                                    <p><span>$</span> @item.Price</p><br /> 
                                                    <a href="~/GarageSale/ViewGarageSale/@item.SaleId">Visit this garage sale</a><br />                  
                                                </div>                    
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
</div>

<footer class="footer">
    <div class="container">
        <p class="text-muted">Dupaco 2015</p>
    </div>
</footer>