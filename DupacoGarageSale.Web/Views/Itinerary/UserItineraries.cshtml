@model DupacoGarageSale.Web.Models.GarageSaleViewModel

@{
    ViewBag.Title = "User Itineraries";
    Layout = "~/Views/Shared/_ItineraryLayout.cshtml";
}

<div class="container down_70">
    <div class="form-inline">
        <div class="form-group">
            <h1>Here are the itineraries you've created</h1>
        </div>
    </div><br />
   
    <div class="col-md-8 col-md-offset-1">
        <input type="hidden" id="hdnItineraryDeleted" value="@ViewBag.ItineraryDeleted" />
        <div id="divItineraryDeleted" class="hidden alert alert-success fade in" role="alert">
            <strong>Nice work!</strong>
            Itinerary deleted!
        </div>

        @if (Model.GarageSaleItineraries.Count == 0)
        {
            <h3>You have no itineraries! <a href="~/GarageSale/Search?s=1">Let's get shopping!</a></h3>
        }
        else
        {
            foreach(var itinerary in Model.GarageSaleItineraries)
            {
                <h3>@itinerary.ItineraryName</h3>
                <span>Created: @itinerary.ItineraryCreatedDate</span><br /><br />
                
                <div class="form-inline">
                    <div class="form-group">
                        @Html.ActionLink("View itinerary", "ViewItinerary", "Itinerary", new { id = @itinerary.ItineraryId },new { @class="btn btn-xs btn-info" }) 
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Delete itinerary", "DeleteItinerary", "Itinerary", new { id = @itinerary.ItineraryId }, new { @class="btn btn-xs btn-danger" })
                    </div>
                </div>
                <br />
                <hr />
            }
        }
    </div>
</div>
