@model DupacoGarageSale.Web.Models.GarageSaleViewModel

@{
    ViewBag.Title = "User Itineraries";
    Layout = "~/Views/Shared/_ItineraryLayout.cshtml";
}

<div class="container down_70">
    <div class="form-inline">
        <div class="form-group">
            <img src="~/Content/images/garagesale.gif" alt="dupaco garage sales!" class="down_30" />
        </div>
        <div class="form-group">
            <h1>Here are the itineraries you've created</h1>
        </div>
    </div><br />
   
    <div class="col-md-8">
        @if (Model.GarageSaleItineraries.Count == 0)
        {
            <h3>You have no itineraries! <a href="~/GarageSale/Search?s=1">Let's get shopping!</a></h3>
        }
        else
        {
            foreach(var itinerary in Model.GarageSaleItineraries)
            {
                <h3>@itinerary.ItineraryName</h3>
                <span>Created: @itinerary.ItineraryCreatedDate</span><br /><br />
                    
                @Html.ActionLink("View itinerary", "ViewItinerary", "Itinerary", new { id = @itinerary.ItineraryId }, 
                        new { @class="btn btn-xs btn-info" })<br />
                <hr />
            }
        }
    </div>
</div>
