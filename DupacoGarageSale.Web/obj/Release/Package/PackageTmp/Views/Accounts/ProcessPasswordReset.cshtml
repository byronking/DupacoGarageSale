@model DupacoGarageSale.Data.Domain.PasswordResetRequest

@{
    ViewBag.Title = "Create a new password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div id="page-wrap" class="jumbotron" style="min-height:200px;">
    <div class="container">
        <div class="row" style="margin-top:30px;margin-left:30px;">
            <form action="ProcessPasswordReset" method="post">
                <p class="lead">@ViewBag.Title</p>
                <div class="form-group" style="width:60%;">
                    <label for="txtPasswordResetUserName">User name</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class="form-control", @id="txtPasswordResetUserName", @readonly="readonly" })
                    <span id="validateUserName" class="red hidden">Please enter your user name.</span>
                </div>
                <div class="form-group" style="width:60%;">                    
                    <label for="txtPasswordResetEmail">Email address</label>
                    @Html.TextBoxFor(m => m.Email, new { @class="form-control", @id="txtPasswordResetEmail", @readonly="readonly" })
                    <span id="validateEmail" class="red hidden">Please enter your email address.</span>
                </div>
                <div class="form-group" style="width:60%;">
                    <label for="txtPassword">Password *</label>
                    @Html.TextBoxFor(m => m.User.Password, new { @class = "form-control", id="txtPassword", @type="password" })
                    <span class="text-error">@Html.ValidationMessageFor(m => m.User.Password)</span>
                </div>            
                <div class="form-group" style="width:60%;">
                    <label for="txtConfirmPassword">Confirm Password *</label>
                    @Html.TextBoxFor(m => m.User.ConfirmPassword, new { @class = "form-control", id="txtConfirmPassword", @type="password" })
                    <span class="text-error">@Html.ValidationMessageFor(m => m.User.ConfirmPassword)</span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Change password" class="btn btn-primary" /><br /><br />
                </div>
                <input type="hidden" id="hdnRequestTooOld" value="@ViewBag.ShowError" />
                <div id="resetErrorMessage" class="alert alert-danger alert-dismissible hidden" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Oops!</strong> This password reset request appears to have expired.
                </div>
            </form>
        </div>
    </div>
</div>
